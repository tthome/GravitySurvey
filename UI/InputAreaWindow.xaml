<Window
    x:Class="UI.InputAreaWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ввод области"
    Height="300"
    Width="300">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox
            Name="AreaTextBox"
            Grid.Row="1"
            Margin="5,0" />
        <StackPanel
            Grid.Row="2"
            Orientation="Horizontal">
            <Button
                BorderThickness="2"
                Background="#FFECF0F1"
                BorderBrush="#FF34495E"
                Padding="5,0,5,2"
                FontSize="14"
                Content="Открыть файл"
                Click="OpenFileButton_Click"
                Margin="5" />
        </StackPanel>
    </Grid>
</Window>