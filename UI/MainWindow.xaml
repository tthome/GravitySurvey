<Window
    x:Class="UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:ui="clr-namespace:UI"
    mc:Ignorable="d"
    Title="MainWindow" Height="350" Width="525"
    Loaded="MainWindow_OnLoaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="178*"/>
            <ColumnDefinition Width="268*"/>
            <ColumnDefinition Width="71*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="3">
            <MenuItem
                Header="Area"
                Click="MenuItem_OnClick" />
        </Menu>
        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button
                Content="Ввод области"
                Click="InputAreaButton_Click"
                Margin="5"/>
                <Button
                Content="Ввод приемников"
                Click="InputReceiversButton_Click" 
                    Margin="5"/>
                <Button
                Content="Решение"
                Click="SolutionButton_Click"
                    Margin="5"/>
              


            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="2,1,17,103" Grid.Row="1">

                <Label x:Name="label" Content="Регулязация по альфа" Width="131"/>
                <CheckBox x:Name="checkBox" Content="CheckBox" Height="32" VerticalAlignment="Center"/>
                <Label x:Name="labe2" Content="Альфа0" Width="55"/>
                <TextBox x:Name="textBox" TextWrapping="Wrap" Text="" Width="46"/>
                <Label x:Name="labe3" Content="шаг" Width="35"/>
                <TextBox x:Name="textBox1" TextWrapping="Wrap" Text="" Width="28"/>
                <Label x:Name="labe4" Content="коэффициент" Width="88"/>
                <TextBox x:Name="textBox2" TextWrapping="Wrap" Text="" Width="46"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="2,10,17,103" Grid.Row="1">

                <Label x:Name="labe5" Content="Регулязация по гамма"/>
                <CheckBox x:Name="checkBox1" Content="CheckBox" Height="32" VerticalAlignment="Center"/>
                <Label x:Name="labe6" Content="Альфа0" Width="55"/>
                <TextBox x:Name="textBox3" TextWrapping="Wrap" Text="" Width="46"/>
                <Label x:Name="labe7" Content="шаг" Width="35"/>
                <TextBox x:Name="textBox4" TextWrapping="Wrap" Text="" Width="28"/>
                <Label x:Name="labe8" Content="коэффициент" Width="88"/>
                <TextBox x:Name="textBox5" TextWrapping="Wrap" Text="" Width="46"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="238*"/>
                    <ColumnDefinition Width="29*"/>
                    <ColumnDefinition Width="39*"/>
                    <ColumnDefinition Width="211*"/>
                </Grid.ColumnDefinitions>
                <oxy:Plot Name="Plot" Title="{Binding Title}" Grid.ColumnSpan="4" Margin="0,33,0,-151">
                    <oxy:Plot.Series>
                        <oxy:LineSeries ItemsSource="{Binding Points}"/>
                    </oxy:Plot.Series>
                </oxy:Plot>
                <!--<oxy:PlotView Name="PlotView"  Model="{Binding MyModel}"/>-->
            </Grid>

        </Grid>
    </Grid>

</Window>